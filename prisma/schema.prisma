generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id         String  @unique
  username   String  @unique
  password   String 
  todolists  Todolist[]
}

model Todolist {
  id         String    @unique
  name       String
  priority   Int
  tags       String    @default("[]") // Save as JSON strings 
  user       User      @relation(fields: [userId], references: [id])
  userId     String
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
}
